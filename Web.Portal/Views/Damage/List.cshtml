@{
    Layout = null;
    int PageCurrent = 0;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số lô:</b> <b style="color:red"> @ViewBag.TotalRecord</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số kiện:</b> <b style="color:red">@ViewBag.SUMPCS</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số cân:</b> <b style="color:red">@ViewBag.SumGW</b></label>
</div>

<table class="table table-striped table-bordered table-advance table-hover dt-responsive">
    <thead>
        <tr>
            <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
            <th style="width:25%;background-color:yellow !important;text-align:center">MAWB</th>          
            <th style="width:20%;background-color:yellow !important;text-align:center">ORIGIN-DEST</th>
            <th style="width:20%;background-color:yellow !important;text-align:center">PIECES-WEIGHT</th>    
            <th style="width:20%;background-color:yellow !important;text-align:center">ERROR</th>           
        </tr>


    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["DamageList"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td><a href="#" data-id="@Html.Raw(row.Prefix+row.AWB)" class="show-image-item">@Html.DisplayTextFor(model => row.Prefix)-@Html.DisplayTextFor(model => row.AWB)</a></td>              
                <td><a href="#" data-id="@Html.Raw(row.Prefix+row.AWB)" class="show-image-item">@Html.DisplayTextFor(model => row.ORGIN)-@Html.DisplayTextFor(model => row.DEST)</a></td>               
                <td><a href="#" data-id="@Html.Raw(row.Prefix+row.AWB)" class="show-image-item">@Html.Raw("T"+row.QuantityExpected+"K"+ row.WeightExpected)</a></td>
                <td><a href="#" data-id="@Html.Raw(row.Prefix+row.AWB)" class="show-image-item"></a></td>

            </tr>
        }
    </tbody>

</table>
<script>
    $(".show-image-item").click(function () {
        egovutil.dialog("Danh sách ảnh bất thường", "large", "/damage/viewimage?awb=" + $(this).attr("data-id"), "");
    });
</script>

