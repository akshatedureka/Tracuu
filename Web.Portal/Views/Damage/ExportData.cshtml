@{
    Layout = null;
    int PageCurrent = 0;

}
<div class="page-logo" style="margin-top: -15px;margin-bottom:50px;">
    <a href="#">
        <img src="http://tracuu.alsc.com.vn/logo/logoNew.png" style="width:40%;height:100px" alt="logo">
    </a>
</div>
<div style="margin-top:1000px !important">
    <p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold;">BÁO CÁO PHỤC VỤ CHUYẾN BAY ĐẾN</p>
    <p style="text-align:center;font-family:'Times New Roman';font-size:12pt">Chuyến bay:  @ViewBag.Flight     Ngày bay: @ViewBag.Date      Giờ dự kiến hạ cánh: @ViewBag.ETA       Giờ hạ cánh thực tế:@ViewBag.ATA</p>
    <p style="text-align:left;font-family:'Times New Roman';font-size:14pt">Quantity</p>
</div>


<p style="text-align:left;font-family:'Times New Roman';font-size:14pt">Irregularities</p>
<table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">
    <thead>
        <tr style="background-color:blue">
            <th class="all" style="width:5%;font-size:14px;background-color:yellow !important;text-align:center" >
                Serial NO.
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                Issue Date
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                Report's File NO.
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                Station
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                MAWB NO.
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                Pieces
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                Weight
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                Description of the Commodity
            </th>

            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center" >
                Package
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center">
                Routing
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center">
                Flight NO./Date
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center">
                Conditions
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center">
                Irregular Pieces
            </th>
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center">
                Irregular Weight
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center">
                Reasons
            </th>
           
            <th style="width:10%;font-size:14px;background-color:yellow !important;text-align:center">
                Remarks
            </th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["DamageList"])
        {
            PageCurrent += 1;

            <tr>
                <td style="font-size:14px;font-weight:bold">@PageCurrent</td>
                <td style="font-size:14px;font-weight:bold">@Html.Raw(row.AgenCreated.HasValue? row.AgenCreated.Value.ToString("ddMMM"): "")</td>
                <td style="font-size:14px;font-weight:bold"></td>
                <td style="font-size:14px;font-weight:bold">HAN</td>
                <td style="font-size:14px;font-weight:bold">@Html.DisplayTextFor(model => row.Prefix)@Html.Raw(Web.Portal.Utils.Format.FormAWB(row.AWB))</td>
                @*<td style="font-size:14px;font-weight:bold"> @Html.DisplayTextFor(model => row.HAWB)</td>*@
                <td style="font-size:14px;font-weight:bold"> @Html.DisplayTextFor(model => row.LAGI_MASTER_PIECES)</td>
                <td style="font-size:14px;font-weight:bold"> @Html.DisplayTextFor(model => row.LAGI_MASTER_WEGIHT)</td>  
                <td style="font-size:14px;font-weight:bold"> @Html.DisplayTextFor(model => row.LAGI_MASTER_GOODS)</td>   
                <td style="font-size:14px;font-weight:bold"> CARTON</td>         
                <td style="font-size:14px;font-weight:bold">@Html.Raw(row.ORGIN + "/" + row.DEST) </td>
                <td style="font-size:14px;font-weight:bold">@Html.Raw(row.FlightNo + "/" + row.FlightDate.Value.ToString("ddMMM").ToUpper()) </td>
                <td style="font-size:14px;font-weight:bold">@Html.Raw(row.Remarks.Equals("DMGD") ? row.Remarks : "OTHER") </td>
                <td style="font-size:14px;font-weight:bold"> @Html.Raw(row.Remarks.Equals("DMGD") ? row.PiecesIrr.ToString() : "")</td>
                <td style="font-size:14px;font-weight:bold"> @Html.Raw(row.Remarks.Equals("DMGD") ? row.WeightIrr.ToString() : "")</td>
                <td style="font-size:14px;font-weight:bold">@Html.Raw(row.Remarks.Equals("DMGD") ? row.Msg : row.Remarks) </td>
                <td style="font-size:14px;font-weight:bold">@Html.Raw(string.Empty)</td>
            </tr>
        }
    </tbody>

</table>
