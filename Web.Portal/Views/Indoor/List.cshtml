@{
    Layout = null;
    int rowIndex = 0;

}
<div class='col-md-12 col-xs-12 margin-top-10'>
    <b style="text-align:right;font-size:20px">
        <span style="color:#006b99">TỔNG SỐ XE ĐANG Ở TẦNG 1:</span> <span style="color:red">@ViewBag.TruckFloor1 </span>
    </b>
</div>
<div class='col-md-12 col-xs-12 margin-top-10'>
    <b style="text-align:right;font-size:20px">
        <span style="color:#006b99">TỔNG SỐ XE ĐANG Ở TẦNG 2:</span> <span style="color:red">@ViewBag.TruckFloor2 </span> 
    </b>
</div>
<table id="tbl-hawb" class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th style="width:3%;background-color:chartreuse !important">
                STT
            </th>
            <th style="width:10%;background-color:chartreuse !important">
                ID
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                BIỂN SỐ XE
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                LOẠI XE
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                VỊ TRÍ
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                THỜI GIAN VÀO
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Common.ViewModel.TicketStatusViewModel>)ViewData["listTruck"])
        {
            rowIndex += 1;

            <tr>
                <td>@rowIndex</td>
                <td style="text-align:center">@Html.Raw(row.TicketID)</td>
                <td style="text-align:center">@Html.Raw(row.BSX)</td>
                <td style="text-align:center">
                    @Html.Raw(row.LoaiVe)
                </td>
                <td style="text-align:center">
                    @Html.DisplayTextFor(model => row.Location)
                </td>
                <td style="text-align:center">
                    @Html.Raw(row.CheckIn)
                </td>
            </tr>
        }
    </tbody>
</table>





<script>
   
    egovutil.CreateTableSort("#tbl-hawb", [[0, "asc"]], [

                { "orderable": false, "targets": 4 }
    ], true);
</script>
