@{
    Layout = null;
    int PageCurrent = 0;

}
<p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold">@ViewBag.TitleReport</p>
<p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold">@ViewBag.Flight</p>

<table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">
    <thead>
        <tr style="background-color:yellow">
            <th class="all" style="width:5% ">
                STT
            </th>            
            <th style="width:10% ">
                CHUYẾN BAY
            </th>
            <th style="width:15% ">
                SỐ KIỆN HÀNG HÓA
            </th>
            <th style="width:15% ">
                TRỌNG LƯỢNG HÀNG HÓA
            </th>
            <th style="width:15% ">
                SỐ KIỆN BƯU ĐIỆN
            </th>
            <th style="width:15% ">
                TRỌNG LƯỢNG BƯU ĐIỆN
            </th>
            <th style="width:15% ">
                TỔNG KIỆN
            </th>
            <th style="width:15% ">
                TỔNG TRỌNG LƯỢNG
            </th>
            <th style="width:15% ">
                GHI CHÚ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.FlightReport>)ViewData["flightLists"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td>@Html.Raw(row.Code+row.FlightNo)</td>              
                <td>@Html.Raw(row.Pices.ToString("n2"))</td>
                <td>@Html.Raw(row.Weight.ToString("n2"))</td>
                <td>@Html.Raw(row.PicesMail.ToString("n2"))</td>
                <td>@Html.Raw(row.WeightMail.ToString("n2"))</td>
                <td>@Html.Raw((row.Pices+row.PicesMail).ToString("n2"))</td>
                <td>@Html.Raw((row.Weight + row.WeightMail).ToString("n2"))</td>
                <td></td>
            </tr>
        }
        <tr>
            <td></td>

            <td colspan="5" style="font-weight:bold">TOTAL</td>
           
            <td style="font-weight:bold">@Html.Raw((Convert.ToDouble(ViewBag.SUMPCS)+ Convert.ToDouble(ViewBag.SUMPCSMAIL)).ToString("n2"))</td>
            <td style="font-weight:bold">@Html.Raw((Convert.ToDouble(ViewBag.SumGW) + Convert.ToDouble(ViewBag.SumGWMAIL)).ToString("n2"))</td>
            <td></td>
        </tr>
    </tbody>

</table>
