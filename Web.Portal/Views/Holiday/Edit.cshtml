
@{
    Layout = null;
}
@model Web.Portal.Model.Models.HolidayConfig
<form class="form-horizontal" id="frmAction">
    <input type="hidden" name="keyValue" value="@Html.DisplayFor(model=>model.ID)" />
    <div class="form-body">
        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>MÔ TẢ:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Mô tả" maxlength="256" value="@Html.DisplayTextFor(model=>model.Description)" name="des" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP MÔ TẢ</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>NGÀY LỄ:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline date-picker" value="@Html.Raw(Model.DateHoliday.HasValue?Model.DateHoliday.Value.ToString("dd/MM/yyyy"):DateTime.Now.ToString("dd/MM/yyyy"))" id="ata" placeholder="ATA" maxlength="20" data-date-format="dd/mm/yyyy" name="ata" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập ngày</span>
            </div>
        </div>


        

    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
        <button type="reset" class="btn btn-success"><i class="fa fa-refresh"></i> Làm mới</button>
    </div>
    <!-- /.box-footer -->
</form>
<script>
    $('.date-picker').datepicker({
        rtl: App.isRTL(),
        orientation: "left",
        autoclose: true
    });
    var message = {};
    var rule = {};
    egovutil.submit("#frmAction", rule, message, "/holiday/action");
