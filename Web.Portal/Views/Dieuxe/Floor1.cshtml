@{
    Layout = "~/Views/Layout/Core.cshtml";
    int rowIndex = 0;
}
<div class="row" style="margin-top:50px !important">
    <table id="tbl-hawb" class="table table-striped table-bordered table-advance table-hover" >
        <thead>
            <tr>

                <th style="width:3%;font-size:24px;font-weight:bold;color:white;background-color:black !important;text-align:center">
                    STT
                </th>
                <th style="width:3%;font-size:24px;font-weight:bold;color:white;background-color:black !important;text-align:center">
                    Biển số xe
                </th>

                <th style="width:3%;font-size:24px;font-weight:bold;color:white;background-color:black !important;text-align:center">
                    Booking
                </th>
                <th style="width:3%;font-size:24px;font-weight:bold;color:white;background-color:black !important;text-align:center">
                    TG Đăng ký
                </th>


            </tr>
        </thead>



        <tbody>
            @foreach (var row in (IList<Web.Portal.Model.tblDangKyGoiXe>)ViewData["listTruck"])
            {
                rowIndex += 1;
                <tr>
                    <td style="font-size:24px;font-weight:bold" align="center">@rowIndex</td>
                    <td style="font-size:24px;font-weight:bold" align="center">@Html.Raw(row.BienSoXe)</td>
                    <td style="font-size:24px;font-weight:bold" align="center">
                        @Html.DisplayTextFor(model => row.Remark)
                    </td>
                    <td style="font-size:24px;font-weight:bold" align="center">
                        @Html.Raw(row.ThoiGianDangKy.HasValue ? row.ThoiGianDangKy.Value.ToString("dd-MM-yy HH:mm") : "")
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>







<script>
    egovutil.CreateTableSort("#tbl-hawb", [[0, "asc"]], [

                { "orderable": false, "targets": 0 }
    ], true);
</script>
