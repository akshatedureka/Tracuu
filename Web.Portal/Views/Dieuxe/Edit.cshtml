
@{
    Layout = null;
}
@model Web.Portal.Model.Models.HawbManagement
<form class="form-horizontal" id="frmAction">
    <input type="hidden" name="keyValue" value="@Html.DisplayFor(model=>model.ID)" />
    <div class="form-body">
        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>CHUYẾN BAY:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Chuyến bay" maxlength="256" data-id="@Html.DisplayTextFor(model=>model.Flight)" value="@Html.DisplayTextFor(model=>model.Flight)" name="flight" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP CHUYẾN BAY</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>ATA:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline date-picker" value="@Html.Raw(Model.ATA.HasValue?Model.ATA.Value.ToString("dd/MM/yyyy"):DateTime.Now.ToString("dd/MM/yyyy"))" id="ata" placeholder="ATA" maxlength="20" data-date-format="dd/mm/yyyy" name="ata" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập ngày</span>
            </div>
        </div>


        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>MAWB:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="MAWB" maxlength="256" data-id="@Html.DisplayTextFor(model=>model.Mawb)" value="@Html.DisplayTextFor(model=>model.Mawb)" name="mawb" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập Mawb</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>HAWB:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="HAWB" maxlength="256" data-id="@Html.DisplayTextFor(model=>model.Hawb)" value="@Html.DisplayTextFor(model=>model.Hawb)" name="hawb" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập Hawb</span>
            </div>
        </div>

    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
        <button type="reset" class="btn btn-success"><i class="fa fa-refresh"></i> Làm mới</button>
    </div>
    <!-- /.box-footer -->
</form>
<script>
    $('.date-picker').datepicker({
        rtl: App.isRTL(),
        orientation: "left",
        autoclose: true
    });
    var message = {};
    var rule = {};
    egovutil.submit("#frmAction", rule, message, "/hawbmanagement/action");

</script>
