
@{
    Layout = null;
}
@model Web.Portal.Model.Models.FlightServiceConfig
<form class="form-horizontal" id="frmAction">
    <input type="hidden" name="keyValue" value="@Html.DisplayFor(model=>model.ID)" />
    <div class="form-body">
        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>TOTAL BUILD UP:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Số vị trí build up" type="number" maxlength="256" data-id="@Html.DisplayTextFor(model=>model.ID)" value="@Html.DisplayTextFor(model=>model.Position)" name="position" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP SỐ VỊ TRÍ</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>TIME PER ULD:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Thời gian build up " type="number" maxlength="256" data-id="@Html.DisplayTextFor(model=>model.ID)" value="@Html.DisplayTextFor(model=>model.FinishTimePerUld)" name="time" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Thời gian khai thác 1 uld</span>
            </div>
        </div>


        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>MAN PER ULD:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Thời gian build up " type="number" maxlength="256" data-id="@Html.DisplayTextFor(model=>model.ID)" value="@Html.DisplayTextFor(model=>model.ManPerUld)" name="man" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Số người khai thác 1 uld</span>
            </div>
            
        </div>

    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
        <button type="reset" class="btn btn-success"><i class="fa fa-refresh"></i> Làm mới</button>
    </div>
    <!-- /.box-footer -->
</form>
<script>
    $(".form_datetime").datetimepicker({
        autoclose: true,
        isRTL: App.isRTL(),
        format: "dd/mm/yyyy  hh:ii",
        pickerPosition: (App.isRTL() ? "bottom-right" : "bottom-left")
    });

    $('.bs-select').selectpicker({
        iconBase: 'fa',
        tickIcon: 'fa-check'
    });
    var message = {};
    var rule = {};
    egovutil.submit("#frmAction", rule, message, "/FlupFlight/actionConfig");

</script>
