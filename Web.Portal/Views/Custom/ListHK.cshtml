
@{
    Layout = null;
    int PageCurrent =(int)ViewBag.PageCurrent;


}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số lô:</b> <b style="color:red"> @ViewBag.TotalRecord</b></label>  
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số kiện:</b> <b style="color:red">@ViewBag.SUMPCS</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số cân:</b> <b style="color:red">@ViewBag.SumGW</b></label>
</div>
<table class="table table-striped table-bordered table-advance table-hover dt-responsive" >
    <thead>
        <tr >
            <th style="width:5%;background-color:yellow !important;text-align:center">No</th>
            <th class="all" style="width:5%;background-color:yellow !important;text-align:center">WH</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                MAWB
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                HAWB
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                PIECES
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                WEIGHT
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                FLIGHT
            </th>
            <th style="width:15%;background-color:yellow !important;text-align:center">
                ATA DATE
            </th>
            <th style="width:15%;background-color:yellow !important;text-align:center">
                ATA TIME
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                CREATED MOVE
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                WAREHOUSE
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                SDD
            </th>
            <th style="width:10%;background-color:yellow !important;text-align:center">
                SDD
            </th>
           
        </tr>
    
        
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["impAWBLists"])
        {
             PageCurrent+= 1;

            <tr style="@Html.Raw(string.IsNullOrEmpty(row.SDD)? "background-color:#FFA07A !important" : "")">
                <td>@PageCurrent</td>
                <td><a href="#">@Html.DisplayTextFor(model => row.WareHouse)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.Prefix)-@Html.DisplayTextFor(model => row.AWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(Model => row.HAWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.QuantityReceived)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.WeightReceived)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.FlightNo)</a></td>
                <td><a href="#">@Html.Raw(row.FlightDate.HasValue ? row.FlightDate.Value.ToString("dd/MM/yyyy") : string.Empty)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.ATATIME)</a></td>
                <td><a href="#">@Html.Raw(row.AgenCreated.HasValue ? row.AgenCreated.Value.ToString("dd/MM/yyyy HH:mm:ss") : string.Empty)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.Remarks)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.SDD)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.STK)</a></td>
            </tr>
        }
    </tbody>

</table>



