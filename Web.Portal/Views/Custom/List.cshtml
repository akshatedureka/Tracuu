
@{
    Layout = null;
    int PageCurrent = (int)ViewBag.PageCurrent;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số lô:</b> <b style="color:red"> @ViewBag.TotalRecord</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số kiện:</b> <b style="color:red">@ViewBag.SUMPCS</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số cân:</b> <b style="color:red">@ViewBag.SumGW</b></label>
</div>

<table class="table table-striped table-bordered table-advance table-hover dt-responsive" >
    <thead>
        <tr>
            <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
            <th style="width:15%;background-color:yellow !important;text-align:center">SỐ VẬN ĐƠN CHỦ</th>
            <th style="width:15%;background-color:yellow !important;text-align:center">SỐ VẬN ĐƠN THỨ CẤP</th>
            <th style="width:20%;background-color:yellow !important;text-align:center">ĐẠI LÝ</th>
            <th style="width:20%;background-color:yellow !important;text-align:center">ĐỊA CHỈ</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">SỐ KIỆN</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">SỐ CÂN</th>
        </tr>
       
        
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["impAWBLists"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td><a href="#">@Html.DisplayTextFor(model => row.Prefix)-@Html.DisplayTextFor(model => row.AWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(Model=>row.HAWB)</a></td>                
                <td><a href="#" >@Html.DisplayTextFor(model => row.Consignee)</a></td>
                <td><a href="#" >@Html.DisplayTextFor(model => row.ConsignADDR)</a></td>
                <td><a href="#" >@Html.DisplayTextFor(model => row.QuantityDelivered)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.WeightReceived)</a></td>
                
            </tr>
        }
    </tbody>

</table>



<div class="box-footer clearfix">
    @Html.Raw(ViewBag.Paging)
</div>
<script>
    egovutil.loadPaging(pagingcusimp, "/custom/list?"

                                                                    + "&fda=" + $("#fcda").val()
                                                                    + "&tda=" + $("#tcda").val()
                                                                    + "&ps=" + $("#pagingcusimp_step").val(), "#content-list-result");



    $("#pagingcusimp_step").change(function () {
        egovutil.getContent("#content-list-result",
                                                               "/custom/list?"

                                                                    + "&fda=" + $("#fcda").val()
                                                                    + "&tda=" + $("#tcda").val()
                                                                    + "&ps=" + $(this).val());
    });

    
   
</script>