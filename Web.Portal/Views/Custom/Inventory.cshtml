@{
   

}
<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <span class="caption-subject font-blue-madison bold uppercase">Báo cáo hàng tồn</span>
                </div>
                <div class="actions">
                    <a href="javascript:;" data-id="02" class="btn btn-circle btn-danger btn-export-count">
                        <i class="fa fa-download"></i> Báo cáo thông tin theo số lượng
                    </a>
                    <a href="javascript:;" data-id="02" class="btn btn-circle btn-danger btn-export-log">
                        <i class="fa fa-download"></i> Xuất thông tin
                    </a>
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="form-group form-md-line-input">
                        <div class="col-md-2 col-xs-12">

                            <input class="form-control form-control-inline" value="0" id="nstart" placeholder="Số ngày bắt đầu" maxlength="20"/>
                            <div class="form-control-focus"> </div>
                            <span class="help-block">Số ngày bắt đầu</span>

                        </div>
                        <div class="col-md-2 col-xs-12">

                            <input class="form-control form-control-inline" value="90" id="nend" placeholder="Số ngày kết thúc" maxlength="20" />
                            <div class="form-control-focus"> </div>
                            <span class="help-block">Số ngày kết thúc</span>

                        </div>
                        
                       
                        <div class="col-md-3 col-xs-12">

                            <div class="input-group">

                                
                                <input class="form-control form-control-inline date-picker" value="@Html.Raw(DateTime.Now.ToString("dd/MM/yyyy"))" id="fcheck" placeholder="Ngày kiểm tra tồn" maxlength="20" data-date-format="dd/mm/yyyy" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Tìm theo từ ngày</span>
                                <span class="input-group-btn">
                                    <button id="btn-search" class="btn btn-success" type="button"><i class="fa fa-search"></i></button>
                                </span>

                              
                            </div>
                        </div>


                    </div>


                </div>

                <div class="row">
                    <div class="form-group form-md-line-input">

                        <div id="content-list-result">

                        </div>
                    </div>


                </div>






            </div>





        </div>
    </div>

</div>
<script>
    var customAction = {
        search: function () {
            egovutil.getContent("#content-list-result", "/custom/listiv?st=" + $("#nstart").val()
                                                                       + "&ed=" + $("#nend").val()
                                                                       +"&date="+$("#fcheck").val()
                                                                   



                                                                    );
        }
    }

    $(".btn-export-log").click(function () {
        window.location.href = "/custom/exportiv?st=" + $("#nstart").val()
                                                                       + "&ed=" + $("#nend").val()
                                                                       + "&date=" + $("#fcheck").val()



    });
    $(".btn-export-count").click(function () {
        egovutil.dialog("Báo cáo hàng tồn theo biểu mẫu", "large", "/custom/inventcount", "");
    });
    
    $('.date-picker').datepicker({
        rtl: App.isRTL(),
        orientation: "left",
        autoclose: true
    });

    $('.bs-select').selectpicker({
        iconBase: 'fa',
        tickIcon: 'fa-check'
    });

    // sitaAction.search();
  
    $("#btn-search").click(function () { customAction.search(); })

</script>