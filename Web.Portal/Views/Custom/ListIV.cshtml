
@{
    Layout = null;
    int PageCurrent = 0;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số lô:</b> <b style="color:red"> @ViewBag.TotalRecord</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số kiện:</b> <b style="color:red">@ViewBag.SUMPCS</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số cân:</b> <b style="color:red">@ViewBag.SumGW</b></label>
</div>

<table class="table table-striped table-bordered table-advance table-hover dt-responsive">
    <thead>
        <tr>
            <th class="all" style="width:3%;background-color:yellow !important;"></th>
            <th style="width:20%;background-color:yellow !important;text-align:center">TÊN HÀNG</th> 
            <th style="width:10%;background-color:yellow !important;text-align:center">SL/TL</th> 
            <th style="width:20%;background-color:yellow !important;text-align:center">NGƯỜI GỬI</th>
            <th style="width:20%;background-color:yellow !important;text-align:center">NGƯỜI NHẬN</th>                
            <th style="width:20%;background-color:yellow !important;text-align:center">MAWB</th>            
            <th style="width:20%;background-color:yellow !important;text-align:center">HAWB</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">SỐ C/B</th>               
            <th style="width:20%;background-color:yellow !important;text-align:center">NGÀY NHẬP CẢNH</th>            
             
        </tr>
       

    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["impAWBLists"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td><a href="#">@Html.DisplayTextFor(model => row.GoodsContent)</a></td> 
                <td><a href="#">@Html.DisplayTextFor(model => row.QuantityReceived)</a><br/><a href="#">@Html.DisplayTextFor(model => row.WeightReceived)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.Shipper) - @Html.DisplayTextFor(model => row.ShipperADDR)</a></td> 
                <td><a href="#">@Html.DisplayTextFor(model => row.Consignee) - @Html.DisplayTextFor(model => row.ConsignADDR)</a></td>
               
                <td><a href="#">@Html.DisplayTextFor(model => row.Prefix)@Html.DisplayTextFor(model => row.AWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.HAWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.FlightNo)</a></td>
                <td><a href="#">@Html.Raw(row.FlightDate.HasValue?row.FlightDate.Value.ToString("dd/MM/yyyy"):string.Empty)</a></td>                
            </tr>
        }
    </tbody>

</table>




