<table border="1" id="tbl-report">
    <thead>
        <tr>
            <th class="all" style="width:3%"></th>
            <th style="width:15%">CHUYẾN BAY</th>
            <th style="width:15%">SL MAWB</th>
            <th style="width:15%">SL HAWB</th>
            <th style="width:15%">SỐ KIỆN HÀNG HÓA</th>
            <th style="width:15%">TRỌNG LƯỢNG HÀNG HÓA</th>
            <th style="width:15%">SỐ KIỆN BƯU ĐIỆN</th>
            <th style="width:15%">TRỌNG LƯỢNG BƯU ĐIỆN</th>
            <th style="width:15%">TỔNG SỐ KIỆN</th>
            <th style="width:15%">TỔNG TRỌNG LƯỢNG</th>
            <th style="width:15%">TỔNG LÔ HÀNG</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < tableReport.Rows.Count; i++)
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                @foreach (var rs in columns)
                {
                    <td>@Html.Raw(tableReport.Rows[i][rs])</td>
                }


            </tr>
        
        }
        <tr>
            <td style="font-size:11pt;text-align:center;color:red">Tổng</td>
            <td></td>
            @for (int j = 1; j < columns.ToList().Count; j++)
            {
                double sum = 0;
                for (int i = 0; i < tableReport.Rows.Count; i++)
                {
                    sum += double.Parse(string.IsNullOrEmpty(tableReport.Rows[i][j].ToString()) ? "0" : tableReport.Rows[i][j].ToString());
                }
                <td style="font-size:11pt;text-align:center;color:red">@Math.Round(sum, 2)</td>
            }
           
        </tr>

    </tbody>

</table>
