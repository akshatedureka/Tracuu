
@{
    Layout = null;
    int PageCurrent = 0;
    string[] columns = (string[])ViewData["column"];
    System.Data.DataTable tableReport = ((System.Data.DataTable)ViewData["DataList"]);

    int totalPIECES_FWB = 0;
    double WEIGHT_FWB = 0;
    int totalPIECES_FFM = 0;
    double WEIGHT_FFM = 0;
    int totalPIECES_FHL = 0;
    double WEIGHT_FHL = 0;
}

<p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold;text-transform:uppercase">
    @ViewBag.Des
</p>
<p style="text-align:center;font-family:'Times New Roman';font-size:13pt;font-weight:bold;text-transform:uppercase">
    @ViewBag.FlightNumber
</p>
<input type="hidden" name="keyValue" id="reportId" value="@ViewBag.ID" />

<table border="1" class="table table-striped table-bordered table-advance table-hover dt-responsive" id="tbl-report">
    <thead>
        <tr>
            <th class="all" style="width:3%"></th>
            <th style="width:10%;background-color:yellow !important;text-align:center">MAWB</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">HAWB</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">PIECES_AWB</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">WEIGHT_AWB</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">GROUP</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">PIECES_GROUP</th>
            <th style="width:5%;background-color:yellow !important;text-align:center">WEIGHT_GROUP</th>
            <th style="width:5%;background-color:yellow !important;text-align:center">SHC</th>
            <th style="width:5%;background-color:yellow !important;text-align:center">LOCATION</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var row in (List<Web.Portal.Layer.CargoSpecial>)ViewData["ListCargoSepecial"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td>@Html.Raw(row.MAWB)</td>
                <td>@Html.Raw(row.HAWB)</td>
                <td>@Html.Raw(row.PIECES)</td>
                <td>@Html.Raw(row.WEIGHT)</td>
                <td>@Html.Raw(row.GROUPID)</td>
                <td>@Html.Raw(row.PIECES_RECEIVED)</td>
                <td>@Html.Raw(row.WEIGHT_RECEIVED)</td>
                <td>@Html.Raw(row.SHC)</td>
                <td>@Html.Raw(row.POSITION)</td>
            </tr>
        }
        @*<tr>
                <td>Tổng</td>
                <td></td>
                <td>@ViewBag.TotalPiceAwb</td>
                <td>@ViewBag.TotalWeightAwb</td>
                <td>@ViewBag.TotalPiceFfm</td>
