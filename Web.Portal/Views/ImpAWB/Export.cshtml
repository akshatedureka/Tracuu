@{
    Layout = null;
    int PageCurrent = 0;
}

<table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">
    <thead>
        <tr style="background-color:yellow">
            <th class="all" style="width:3%"></th>
            <th style="width:15%">
                MAWB
            </th>
            <th style="width:15%">
                HAWB
            </th>
            <th style="width:10%">
                ORIGIN-DEST
            </th>
            <th style="width:10%">
                FLIGHT-DATE
            </th>

            <th style="width:15%">
                AGENT
            </th>
            <th style="width:30%">
                SHIPPER
            </th>
            <th style="width:35%">
                SHIPPER ADDR
            </th>
            <th style="width:30%">
                CONSIGNEE:
            </th>
            <th style="width:30%">
                CONSIGN ADDR:
            </th>
            <th>
                DATE IN:
            </th>
            <th>
                DATE OUT:
            </th>
            <th style="width:15%">
                PCS BILL:
            </th>
            <th style="width:15%">
                GW BILL:
            </th>
            <th style="width:15%">
                PCS GOODS ARRIVAL:
            </th>
            <th style="width:15%">
                GW GOODS ARRIVAL:
            </th>
            <th style="width:15%">
                PCS DELIVERY:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["impAWBLists"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>

                <td>@Html.DisplayTextFor(model => row.Prefix) - @Html.DisplayTextFor(model => row.AWB)</td>
                <td>@Html.DisplayTextFor(model => row.HAWB)</td>
                <td>@Html.DisplayTextFor(model => row.ORGIN) - @Html.DisplayTextFor(model => row.DEST)</td>
                <td>@Html.DisplayTextFor(model => row.FlightNo)/@Html.Raw(row.FlightDate.HasValue && row.FlightDate.Value != DateTime.MinValue ? row.FlightDate.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
                <td>@Html.DisplayTextFor(model => row.Agent)</td>
                <td>@Html.DisplayTextFor(model => row.Shipper)</td>
                <td>@Html.DisplayTextFor(model => row.ShipperADDR)</td>
                <td>@Html.DisplayTextFor(model => row.Consignee)</td>
                <td>@Html.DisplayTextFor(model => row.ConsignADDR)</td>
                <td>@Html.Raw(row.FlightDate.HasValue && row.FlightDate.Value != DateTime.MinValue ? row.FlightDate.Value.ToString("dd/MM/yyyy") + " " + row.ATATIME : string.Empty)</td>              
                <td>@Html.Raw(row.DateOut.HasValue && row.DateOut.Value != DateTime.MinValue ? row.DateOut.Value.ToString("dd/MM/yyyy HH:mm") : string.Empty)</td>
                <td>@Html.DisplayTextFor(model => row.QuantityExpected)</td>
                <td>@Html.DisplayTextFor(model => row.WeightExpected)</td>
                <td>@Html.DisplayTextFor(model => row.QuantityReceived)</td>
                <td>@Html.DisplayTextFor(model => row.WeightReceived)</td>
                <td>@Html.DisplayTextFor(model => row.QuantityDelivered)</td>
            </tr>
        }
    </tbody>

</table>
