@{
    Layout = null;
    int PageCurrent = 0;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label'><b>Tổng số: @ViewBag.TotalRecord</b></label>
</div>

<table border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">
    <thead>
        <tr style="background-color:yellow">
            <th class="all" style="width:3%"></th>
            <th style="width:15%">
                FLIGHTNO
            </th>
            <th style="width:15%">
                PREFIX
            </th>
            <th style="width:15%">
                MAWB
            </th>
            <th style="width:15%">
                HAWB
            </th>
            <th style="width:10%">
                PICES
            </th>

            <th style="width:15%">
                WEIGHT
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["impAWBLists"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td>
                    @Html.DisplayTextFor(model => row.FlightNo)
                </td>
                <td>
                    @Html.DisplayTextFor(model => row.Prefix)</td>
                <td>@Html.DisplayTextFor(model => row.AWB)</td>
                <td>
                    @Html.DisplayTextFor(model => row.HAWB)
                </td>
                <td>
                    @Html.DisplayTextFor(model => row.QuantityReceived)
                </td>
                <td>
                   @Html.DisplayTextFor(model => row.WeightReceived)
                </td>
            </tr>
        }
    </tbody>

</table>

