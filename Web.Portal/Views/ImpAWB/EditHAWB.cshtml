@{
    Layout = null;
    int PageCurrent = 0;
}
<div class='col-md-4 col-xs-12 margin-top-10'>
    <label class='control-label'><b>MAWB: <span class="text-primary">@ViewBag.AWB</span></b></label>
</div>
<div class='col-md-4 col-xs-12 margin-top-10'>
    <label class='control-label'><b>FLIGHT: <span class="text-primary">@ViewBag.FlightNo</span></b></label>
</div>
<div class='col-md-4 col-xs-12 margin-top-10'>
    <label class='control-label'><b>ORIGIN-DEST: <span class="text-primary">@ViewBag.OrginDest</span></b></label>
</div>
<div class='col-md-12 col-xs-12 margin-top-10'>
    <label class='control-label'><b>Tổng số: @ViewBag.TotalRecord</b></label>
</div>
<div style="width:100%;overflow-x:auto">
    <table class="table table-striped table-bordered table-advance table-hover dt-responsive" id="tbl-hawb">
        <thead>
            <tr>
                <th class="all" style="width:3%"></th>
                <th style="width:15%"></th>
                <th style="width:15%">
                    HAWB
                </th>
                <th style="width:15%">
                    GOODS NAME
                </th>
                <th style="width:15%">
                    CONSIGNEE
                </th>
                <th style="width:15%">
                    CONSIGNEE ADDR
                </th>
                <th style="width:15%">
                    PCS BILL
                </th>
                <th style="width:15%">
                    GW BILL
                </th>
                <th style="width:15%">
                    PCS GOODS
                </th>
                <th style="width:15%">
                    GW GOODS
                </th>
                <th style="width:15%">
                    PCS DELIVERY
                </th>
                <th style="width:10%">
                    CHI TIẾT
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Layer.ImpHAWB>)ViewData["impHawbLists"])
            {
                PageCurrent += 1;

                <tr>
                    <td>@PageCurrent</td>
                    <td>@Html.Raw(Web.Portal.Utils.Constants.GetDelivery(row.StatusDelivered))</td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.HAWB)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.GOODSNAME)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.CONSIGNEE)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.CONSIGNEEADDR)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.QuantityExpected)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.WeightExpected)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.QuantityReceived)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.WeightReceived)</a></td>
                <td align="right"><a href="#" class="btn  btn-xs">@Html.DisplayTextFor(model => row.QuantityDelivered)</a></td>
                <td align="center">
                   <a href="/AwbDetail/HawbDetail?lagi_ident=@row.Lagi_Ident&mawb=@row.HAWB&hawb=@row.HAWB&lagi_master_ident=@row.Lagi_Master_Ident&status=1" target="_blank" class="btn  btn-xs sqs-member-edit"><div class="btn-group green"><i style="font-size:30px;" class="fa fa-eye"></i></div> </a>
                </td>
            </tr>
            }
            <tr>
                <td></td>
                <td></td>

                <td colspan="2" align="right"><strong style="color:red">@ViewBag.TotalExp</strong></td>

                <td colspan="2" align="right"><strong style="color:red">@ViewBag.TotalRecv</strong></td>
                <td></td>
            </tr>
        </tbody>

    </table>
</div>
<script>
   
</script>