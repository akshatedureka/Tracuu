
@{
    Layout = null;
    int PageCurrent = (int)ViewBag.PageCurrent;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label'><b>Tổng số: @ViewBag.TotalRecord</b></label>
</div>

<table class="table table-striped table-bordered table-advance table-hover dt-responsive" id="tbl-impawb">
    <thead>
        <tr>
            <th class="all" style="width:3%"></th>
            <th style="width:15%">
                FLIGHTNO
            </th>
            <th style="width:15%">
                PREFIX
            </th>
            <th style="width:15%">
                MAWB
            </th>
            <th style="width:15%">
                HAWB
            </th>
            <th style="width:10%">
                PICES
            </th>

            <th style="width:15%">
                WEIGHT
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.ImpAWB>)ViewData["impAWBLists"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td>
                    <a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.FlightNo)</a>
                </td>
                <td>
                    <a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.Prefix)</a>
                </td>
                <td>
                    <a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.AWB)</a>
                </td>
                <td>
                    <a href="#"class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.HAWB)</a>
                </td>
                <td>
                    <a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.QuantityReceived)</a>
                </td>
                <td>
                    <a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.WeightReceived)</a>
                </td>
            </tr>
        }
    </tbody>

</table>



<div class="box-footer clearfix">
    @Html.Raw(ViewBag.Paging)
</div>
<script>
    egovutil.loadPaging(pagingimpawb, "/impawb/listrs?cd=" + $("#cd").val()
                                                                    + "&fno=" + $("#fno").val()
                                                                    + "&fda=" + $("#fda").val()
                                                                    + "&tda=" + $("#tda").val() + "&hawb=" + $("#hawb").val()
                                                                    + "&ps=" + $("#pagingimpawb_step").val(), "#content-list-result");



    $("#pagingimpawb_step").change(function () {
        egovutil.getContent("#content-list-result",
                                                                "/impawb/listrs?cd=" + $("#cd").val()
                                                                    + "&fno=" + $("#fno").val()
                                                                    + "&fda=" + $("#fda").val()
                                                                    + "&tda=" + $("#tda").val() + "&hawb=" + $("#hawb").val()
                                                                    + "&ps=" + $(this).val());
    });

   
   
</script>