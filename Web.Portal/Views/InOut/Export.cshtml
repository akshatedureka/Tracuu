@{
    Layout = null;
    int PageCurrent = 0;
}

<table class="table table-striped table-bordered table-advance table-hover dt-responsive" style="width:100%" border="1">
    <thead>
        <tr>

            <th style="width:5%;font-size:13px;background-color:yellow !important;text-align:center">
                STT
            </th>
            <th style="width:15%;font-size:13px;background-color:yellow !important;text-align:center">
                Chỉ Tiêu SLA
            </th>
            <th style="width:10%;font-size:13px;background-color:yellow !important;text-align:center">
                Ngày
            </th>
            <th style="width:10%;font-size:13px;background-color:yellow !important;text-align:center">
                Chuyến bay
            </th>
            <th style="width:10%;font-size:13px;background-color:yellow !important;text-align:center">
                Hãng
            </th>
            <th style="width:15%;font-size:13px;background-color:yellow !important;text-align:center">
                Lô hàng/Biển số xe
            </th>
           
            <th style="width:15%;font-size:13px;background-color:yellow !important;text-align:center">
               Thời gian tạo trên VCT
            </th>
            <th style="width:15%;font-size:13px;background-color:yellow !important;text-align:center">
                Thời gian kết thúc
            </th>
            <th style="width:15%;font-size:13px;background-color:yellow !important;text-align:center">
                Thời gian tổng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.InOutCheck>)ViewData["InOutCheckList"])
        {
            PageCurrent+= 1;

            <tr>
                <td>@PageCurrent</td>
                <td>@Html.DisplayTextFor(model => row.ChiTieuSLA)</td>
                <td>@Html.DisplayTextFor(model => row.Ngay)</td>
                <td>@Html.DisplayTextFor(model => row.ChuyenBay)</td>
                <td>@Html.DisplayTextFor(model => row.Hang)</td>
                <td>@Html.DisplayTextFor(model => row.BienSoXe)</td>
                <td>@Html.DisplayTextFor(model => row.ThoiGian)</td>
                <td>@Html.DisplayTextFor(model => row.ThoiGianKetThuc)</td>
                <td>@Html.DisplayTextFor(model => row.TongThoiGian)</td>
                
            </tr>
        }
    </tbody>

</table>