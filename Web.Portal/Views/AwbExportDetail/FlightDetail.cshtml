
@{
    Layout = null;
    int PageCurrent = 0;
}
<div>

</div>
<div id="content-invoice">

    <table class="table table-striped table-bordered table-advance table-hover dt-responsive">
        <thead>
            <tr>
                <th class="all" style="width:3%"></th>
                <th style="width:10%">
                    Chuyến bay
                </th>
                <th style="width:10%">
                    STD
                </th>
                <th style="width:10%">
                    ETD
                </th>
                <th style="width:10%">
                    ATD
                </th>
                <th style="width:10%">
                    Pieces
                </th>
                <th style="width:10%">
                    Weights
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Common.ApiViewModel.HawbInFlightViewModel>)ViewData["listFlight"])
            {
                PageCurrent += 1;

                <tr>
                    <td>@PageCurrent</td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.FlightNo)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.Raw(row.ScheduleDate + " " + row.ScheduleTime)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.Raw(row.EstimateDate + " " + row.EstimateTime)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.Raw(row.ATADate + " " + row.ATATime)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.PiecesReceive)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.WeightsReceive)</a></td>
                </tr>
            }
        </tbody>

    </table>


</div>