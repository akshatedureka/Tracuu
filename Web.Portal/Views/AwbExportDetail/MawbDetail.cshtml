<script>
    var hermesAction = {
        search: function () {
            egovutil.getContent("#content-list-result", "/AwbExportDetail/FlightDetail?lab_ident=" + @ViewBag.LabID
                         + "&mawb=" + $("#hawb").val() + "&mawb=" + $("#hawb").val());
        },
        searchpxk: function () {
            egovutil.getContent("#content-pxk-result", "/AwbExportDetail/CustomFormDetail?lab_ident=" + @ViewBag.LabID);

        },
        searchcustom: function () {
            egovutil.getContent("#content-custom-result", "/AwbExportDetail/CustomDetail?lab_ident=" + @ViewBag.LabID
                         + "&mawb=" + $("#hawb").val() + "&mawb=" + $("#hawb").val());

        },
        searchmessage: function () {
            egovutil.getContent("#content-message-result", "/AwbExportDetail/MessageDetail?lab_ident=" + @ViewBag.LabID);

        },
        searchinvoice: function () {
            egovutil.getContent("#content-invoice-result", "/AwbExportDetail/Invoice?lab_ident=" + @ViewBag.LabID);

        },
        searchvct: function () {
            egovutil.getContent("#content-vct-result", "/AwbExportDetail/VCTDetail?lab_ident=" + @ViewBag.LabID);

        }
    }
    $("#arrow-advance").click(function () { hermesAction.search(); })

    $("#pxk-search").click(function () { hermesAction.searchpxk(); })
    $("#custom-detail").click(function () { hermesAction.searchcustom(); })
    $("#message-detail").click(function () { hermesAction.searchmessage(); })
    $("#invoice-detail").click(function () { hermesAction.searchinvoice(); })
    $("#vct-detail").click(function () { hermesAction.searchvct(); })
</script>