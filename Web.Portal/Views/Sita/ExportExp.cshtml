@{
    Layout = null;
    int pageCurrent = 0;
    int pageCurrentError = 0;
    IList<Web.Portal.Layer.SitaError> SitaErrorList = (IList<Web.Portal.Layer.SitaError>)ViewData["SitaExpList"];

}
<p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold;text-transform:uppercase">
    THỐNG KÊ ĐIỆN @ViewBag.ReportSita
</p>
<p style="text-align:left;font-family:'Times New Roman';font-size:15pt;font-weight:bold">
    <span>TỔNG SỐ ĐIỆN @ViewBag.ReportSita CHUẨN:</span> <span style="color:red">@ViewBag.SumSita</span>
    <span>TỔNG SỐ ĐIỆN @ViewBag.ReportSita SAI:</span> <span style="color:red">@ViewBag.SumSitaError</span>
</p>
<table style="width:100%" border="0">
    <tr>
        <td>
            <table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">


                <thead>
                    <tr style="background-color:green;color:white;font-weight:bold">
                        <th colspan="2">DANH SÁCH ĐIỆN @ViewBag.ReportSita CHUẨN</th>
                    </tr>
                    <tr style="background-color:green;color:white;font-weight:bold">
                        <th align="center" class="all" style="width:3%">STT</th>
                        <th style="width:95%;text-align:center">SỐ VẬN ĐƠN CHỦ</th>  
                   </tr>
                </thead>
                <tbody>
                    @foreach (var row in SitaErrorList.Where(x=>x.Status== true).ToList())
                    {
                        pageCurrent += 1;

                        <tr>
                            <td align="center">@pageCurrent</td>
                            <td>@Html.DisplayTextFor(model => row.MAWB)</td>                           
                            
                        </tr>
                    }
                </tbody>

            </table>
        </td>
        <td>

            <table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">


                <thead>
                    <tr style="background-color:red;color:white;font-weight:bold">
                        <th colspan="3">DANH SÁCH ĐIỆN @ViewBag.ReportSita LỖI</th>
                    </tr>
                    <tr style="background-color:red;color:white;font-weight:bold">
                        <th align="center" class="all" style="width:3%">STT</th>
                        <th style="width:30%;text-align:center">SỐ VẬN ĐƠN CHỦ</th>
                        <th style="width:65%;text-align:center">LỖI</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in  SitaErrorList.Where(x => x.Status == false).ToList())
                    {
                        pageCurrentError += 1;

                        <tr style="">
                            <td align="center">@pageCurrentError</td>
                            <td>@Html.DisplayTextFor(model => row.MAWB)</td>
                            <td>@Html.DisplayTextFor(model => row.Error)</td>
                           
                        </tr>
                    }
                </tbody>

            </table>

        </td>
    </tr>
</table>
           



