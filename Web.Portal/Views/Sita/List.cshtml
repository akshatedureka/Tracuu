
@{
    Layout = null;
    int PageCurrent = (int)ViewBag.PageCurrent;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số lô:</b> <b style="color:red"> @ViewBag.TotalRecord</b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số điện:</b> <b style="color:red">@ViewBag.SumSita</b></label>
</div>


<table class="table table-striped table-bordered table-advance table-hover dt-responsive">
    <thead>
        <tr>
            <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
            <th style="width:40%;background-color:yellow !important;text-align:center">SỐ VẬN ĐƠN CHỦ</th>
            <th style="width:40%;background-color:yellow !important;text-align:center">SỐ ĐIỆN</th>
           
        </tr>


    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.Sita>)ViewData["SitaLists"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td><a href="#">@Html.DisplayTextFor(model => row.Prefix)-@Html.DisplayTextFor(model => row.MAWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(Model => row.Quantity)</a></td>
              

            </tr>
        }
    </tbody>

</table>



<div class="box-footer clearfix">
    @Html.Raw(ViewBag.Paging)
</div>
<script>
    egovutil.loadPaging(pagingsita, "/sita/list?fda=" + $("#fda").val()
                                                                    + "&tda=" + $("#tda").val()
                                                                    + "&ps=" + $("#pagingsita_step").val(), "#content-list-result");



    $("#pagingsita_step").change(function () {
        egovutil.getContent("#content-list-result",
                                                               "/sita/list?fda=" + $("#fda").val()
                                                                       + "&tda=" + $("#tda").val()
                                                                    + "&ps=" + $(this).val());
    });



</script>