                        <div id="content-invoice-result">

                        </div>
                    </div>


                </div>
                <div class="row" style="@Html.Raw(@ViewBag.Alsx=="1"? "display:none" : "")">
                    <div class="form-group form-md-line-input">
                        <div class="col-md-3 col-xs-12" style="padding-top:14px;font-size:16px;">
                            <a id="advance-search">
                                <div id="vct-detail" style="display:block">
                                    <i class="fa fa-truck "></i>
                                    <span>Thông tin xe vận chuyển</span>
                                </div>
                            </a>

                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:10px">
