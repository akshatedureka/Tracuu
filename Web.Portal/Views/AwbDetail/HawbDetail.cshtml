                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <div id="content-location-result">

                        </div>
                    </div>


                </div>
                <div class="row" style="@Html.Raw(@ViewBag.Alsx=="1"? "display:none" : "")">
                    <div class="form-group form-md-line-input">
                        <div class="col-md-2 col-xs-12" style="padding-top:14px;font-size:16px;">
                            <a id="advance-search">
                                <div id="pxk-search" style="display:block">
                                    <i class="fa fa-file-text "></i>
                                    <span>Thông tin PXK</span>
                                </div>
                            </a>

                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:10px">
                    <div class="col-md-12">
                        <div id="content-pxk-result">

                        </div>
                    </div>


                </div>
                <div class="row" style="@Html.Raw(@ViewBag.Alsx=="1"? "display:none" : "")">
                    <div class="form-group form-md-line-input">
                        <div class="col-md-2 col-xs-12" style="padding-top:14px;font-size:16px;">
                            <a id="advance-search">
                                <div id="invoice-detail" style="display:block">
                                    <i class="fa fa-money"></i>
                                    <span>Thông tin Hóa đơn</span>
                                </div>
                            </a>

                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:10px">
