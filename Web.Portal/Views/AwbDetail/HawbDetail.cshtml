<script>
    var hermesAction = {
        search: function () {
            egovutil.getContent("#content-list-result", "/AwbDetail/FlightDetail?lagi_ident=" + @ViewBag.LagiID
                         + "&mawb=" + $("#hawb").val()
                          + "&alsx=" + @ViewBag.Alsx
                         + "&mawb=" + $("#hawb").val());
        },
        searchlocation: function () {
            egovutil.getContent("#content-location-result", "/AwbDetail/LocationDetail?lagi_ident=" + @ViewBag.LagiID
                         + "&mawb=" + $("#hawb").val() + "&mawb=" + $("#hawb").val());
        },
        searchpxk: function () {
            egovutil.getContent("#content-pxk-result", "/AwbDetail/CustomFormDetail?lagi_ident=" + @ViewBag.LagiID);

        },
        searchcustom: function () {
            egovutil.getContent("#content-custom-result", "/AwbDetail/CustomDetail?lagi_ident=" + @ViewBag.LagiID
                         + "&mawb=" + $("#hawb").val() + "&mawb=" + $("#hawb").val());

        },
        searchmessage: function () {
            egovutil.getContent("#content-message-result", "/AwbDetail/MessageDetail?lagi_ident=" + @ViewBag.LagiID);

        },
        searchinvoice: function () {
            egovutil.getContent("#content-invoice-result", "/AwbDetail/Invoice?lagi_ident=" + @ViewBag.LagiID);

        },
        searchvct: function () {
            egovutil.getContent("#content-vct-result", "/AwbDetail/VCTDetail?lagi_ident=" + @ViewBag.LagiID);

        },
        searchdlv : function () {
            egovutil.getContent("#content-dlv-result", "/AwbDetail/DlvDetail?lagi_ident=" + @ViewBag.LagiID);
        }
    }
    $("#arrow-advance").click(function () { hermesAction.search(); })

    $("#pxk-search").click(function () { hermesAction.searchpxk(); })
    $("#location-search").click(function () { hermesAction.searchlocation(); })
    $("#custom-detail").click(function () { hermesAction.searchcustom(); })
    $("#message-detail").click(function () { hermesAction.searchmessage(); })
    $("#invoice-detail").click(function () { hermesAction.searchinvoice(); })
    $("#vct-detail").click(function () { hermesAction.searchvct(); })
    $("#dlv-detail").click(function () { hermesAction.searchdlv(); })
</script>