<div id="content-invoice">

    <table class="table table-striped table-bordered table-advance table-hover dt-responsive">
        <thead>
            <tr>
                <th class="all" style="width:3%"></th>
                <th style="width:10%">
                    GROUP
                </th>
                <th style="width:10%">
                    SỐ KIỆN
                </th>
                <th style="width:10%">
                    NGÀY DELIVERY
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Common.ViewModel.DeliveryViewModel>)ViewData["listDlv"])
            {
                PageCurrent += 1;

                <tr>
                    <td>@PageCurrent</td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.Group)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.Raw(row.Pieces)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.Raw(row.Created.Value.ToString("dd/MM/yyyy HH:mm"))</a></td>
                </tr>
            }
        </tbody>

    </table>


</div>