
@{
    Layout = null;
    int PageCurrent = 0;
}
<div>

</div>
<div id="content-invoice">

    <table class="table table-striped table-bordered table-advance table-hover dt-responsive">
        <thead>
            <tr>
                <th class="all" style="width:3%"></th>
                <th style="width:10%">
                    GROUP
                </th>
                <th style="width:10%">
                    LOCATION
                </th>
                <th style="width:10%">
                    NGÀY TẠO
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in (IList<Web.Portal.Common.ApiViewModel.LocationDetailViewModel>)ViewData["listLocation"])
            {
                PageCurrent += 1;

                <tr>
                    <td>@PageCurrent</td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.GroupNo)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.DisplayTextFor(model => row.Location)</a></td>
                    <td><a href="#" class="btn edit-hawb  btn-xs">@Html.Raw(row.Created.ToString("dd/MM/yyyy HH:mm"))</a></td>
                </tr>
            }
        </tbody>

    </table>


</div>