@{
    Layout = null;
    int rowIndex = 0;

}
<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <span class="caption-subject font-blue-madison bold uppercase">Danh sách loại ULD</span>
                </div>

                <div class="actions">

                    <a href="javascript:;" class="btn btn-default btn-sm btn-add-item">
                        <i class="fa fa-plus"></i> Thêm mới
                    </a>
                </div>
            </div>
            <div class="portlet-body">

                <div class="form-group form-md-line-input">
                    <table id="tbl-sop" class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th style="width:5%">
                                    STT
                                </th>
                                <th style="width:15%">
                                    Loại
                                </th>
                                <th style="width:15%">
                                    Thời gian khai thác
                                </th>
                                <th style="width:20%">
                                    Thời gian cảnh báo
                                </th>
                                <th style="width:20%">
                                    Số thứ tự
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in (IList<Web.Portal.Model.Models.ULD_TYPE>)ViewData["UldTypeList"])
                            {
                                rowIndex += 1;

                                <tr>
                                    <td>@rowIndex</td>
                                    <td><a href="#" data-id="@Html.DisplayFor(model=>row.ID)" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.Name)</a></td>
                                    <td>
                                        <a href="#" data-id="@Html.DisplayFor(model => row.ID)" class="btn  btn-xs sqs-member-edit">@Html.DisplayTextFor(model => row.TimeOperation)</a>
                                    </td>
                                    <td>
                                        <a href="#" data-id="@Html.DisplayFor(model => row.ID)" class="btn  btn-xs sqs-member-edit">@Html.DisplayTextFor(model => row.TimeNotify)</a>
                                    </td>
                                    <td>
                                        <a href="#" data-id="@Html.DisplayFor(model => row.ID)" class="btn  btn-xs sqs-member-edit">@Html.DisplayTextFor(model => row.STT)</a>
                                    </td>
                                    <td>
                                        <a href="#" data-id="@Html.DisplayFor(model => row.ID)" class="btn  btn-xs sqs-member-edit">
                                            <i class="fa fa-edit"></i> Sửa
                                        </a>
                                        <a href="#" data-id="@Html.DisplayFor(model => row.ID)" class="btn  btn-xs sqs-member-delete">
                                            <i class="fa fa fa-trash-o"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    $(".btn-add-item").click(function () {
        egovutil.dialog("Thêm mới Loại ULD", "large", "/kscb/EditWarningTime/", "egovutil.loadUrlMain('/kscb/WarningTime')");
    });
    $(".sqs-member-edit").click(function () {
        egovutil.dialog("Sửa thông tin Loại ULD", "large", "/kscb/EditWarningTime/" + $(this).attr("data-id"), "egovutil.loadUrlMain('/kscb/WarningTime')");
    });
    $(".sqs-member-delete").click(function () {
        egovutil.dlgConfirmAction("Xóa thông tin Loại ULD", "Bạn muốn xóa thông tin Loại ULD", "/kscb/DeleteWarning/" + $(this).attr("data-id"), "egovutil.loadUrlMain('/kscb/soptime')");
    });
    egovutil.CreateTableSort("#tbl-sop", [[0, "asc"]], [

                { "orderable": false, "targets": 6 }
    ], true);

</script>
