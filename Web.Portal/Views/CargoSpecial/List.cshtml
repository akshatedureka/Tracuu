@{
    Layout = null;
    int PageCurrent = 0;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số lô:</b> <b style="color:red"> @ViewBag.TotalRecord</b></label>
</div>


<table class="table table-striped table-bordered table-advance table-hover dt-responsive">
    <thead>
        <tr>
            <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
            <th style="width:20%;background-color:yellow !important;text-align:center">MAWB</th>
            <th style="width:20%;background-color:yellow !important;text-align:center">HAWB</th>
            <th style="width:20%;background-color:yellow !important;text-align:center">GROUP</th>
            <th style="width:20%;background-color:yellow !important;text-align:center">THỂ LOẠI</th>
            <th style="width:50%;background-color:yellow !important;text-align:center">VỊ TRÍ</th>
            
        </tr>


    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.CargoSpecial>)ViewData["CargoSpecialList"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
                <td><a href="#">@Html.DisplayTextFor(model => row.PREFIX)-@Html.DisplayTextFor(model => row.MAWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.HAWB)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.GROUPID)</a></td>
                <td><a href="#">@Html.DisplayTextFor(model => row.TYPE)</a></td>
                <td><a href="#">@Html.Raw(row.POSITION)</a></td>
               

            </tr>
        }
    </tbody>

</table>
