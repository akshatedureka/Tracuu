@{
    Layout = null;
    int PageCurrent = 0;
    IList<Web.Portal.Layer.MessageHermes> messageList = (IList<Web.Portal.Layer.MessageHermes>)ViewData["MessageHermesList"];
    int PageCurrent2 = 0;
}
<p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold;">DANH SÁCH ĐIỆN BÁO HÀNG</p>
<p style="text-align:center;font-family:'Times New Roman';font-size:15pt;font-weight:bold;">FLIGHT:  @ViewBag.Flight          DATE: @ViewBag.Date</p>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>TỔNG MAWB:</b> <b style="color:red"> @ViewBag.TotalMAWB </b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>MAIL:</b> <b style="color:red">@ViewBag.TotalMail </b></label>
</div>
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>POST:</b> <b style="color:red">@ViewBag.TotalPost </b></label>
</div>
<table border="0" style="width:100%">
    <tr>
        <td valign="top" style="font-size:14px;font-weight:bold;color:black">DANH SÁCH THEO EMAIL</td>
        <td valign="top" style="font-size:14px;font-weight:bold;color:black">DANH SÁCH THEO DATAPOST</td>
    </tr>
    <tr>
        <td valign="top">
            <table class="table table-striped table-bordered table-advance table-hover dt-responsive"  border="1"style="width:100%;font-family:'Times New Roman';font-size:14pt">
                <thead>
                    <tr>
                        <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
                        <th style="width:20%;background-color:yellow !important;text-align:center">MAWB</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">LẦN GỬI</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">NGÀY GỬI</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">CNEE</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">ADDR</th>
                        <th style="width:25%;background-color:yellow !important;text-align:center">THÀNH CÔNG</th>
                        <th style="width:25%;background-color:yellow !important;text-align:center">THẤT BẠI</th>
                    </tr>


                </thead>
                <tbody>
                   @foreach (var row in messageList.Where(x =>! x.MSGVALUE.ToUpper().Trim().Contains("EDATAPOST.ALSC@ALS.COM.VN")).ToList())
                   {
                       PageCurrent += 1;

                        <tr>
                            <td style="font-size:14px;font-weight:bold;color:black">@PageCurrent</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.DisplayTextFor(model => row.Prefix)-@Html.DisplayTextFor(model => row.AWB)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGCOUNT)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGDATELIST)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.Consignee)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.ConsignADDR)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGVALUE)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGFILE)</td>
                        </tr>
                    }
                </tbody>

            </table>
        </td>
        <td valign="top">
            <table class="table table-striped table-bordered table-advance table-hover dt-responsive" border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt">
                <thead>
                    <tr>
                        <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
                        <th style="width:20%;background-color:yellow !important;text-align:center">MAWB</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">LẦN GỬI</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">NGÀY GỬI</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">CNEE</th>
                        <th style="width:15%;background-color:yellow !important;text-align:center">ADDR</th>
                        <th style="width:25%;background-color:yellow !important;text-align:center">THÀNH CÔNG</th>
                        <th style="width:25%;background-color:yellow !important;text-align:center">THẤT BẠI</th>             
                    </tr>


                </thead>
                <tbody>
                    @foreach (var row in messageList.Where(x => x.MSGVALUE.ToUpper().Trim().Contains("EDATAPOST.ALSC@ALS.COM.VN")).ToList())
                    {
                        PageCurrent2 += 1;

                        <tr>
                            <td style="font-size:14px;font-weight:bold;color:black">@PageCurrent2</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.DisplayTextFor(model => row.Prefix)-@Html.DisplayTextFor(model => row.AWB)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGCOUNT)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGDATELIST)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.Consignee)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.ConsignADDR)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGVALUE)</td>
                            <td style="font-size:14px;font-weight:bold;color:black">@Html.Raw(row.MSGFILE)</td>
                        </tr>
                    }
                </tbody>

            </table>
        </td>
    </tr>
</table>
     
