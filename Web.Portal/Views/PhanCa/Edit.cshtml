
@{
    Layout = null;
}
@model Web.Portal.Model.Models.tblMission
<form class="form-horizontal" id="frmAction">
    <input type="hidden" name="keyValue" value="@Html.DisplayFor(model=>model.ID)" />
    <div class="form-body">
        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>Công Việc:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Mô tả" maxlength="256" value="@Html.DisplayTextFor(model=>model.MissionName)" name="mission" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP MÔ TẢ</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>Nhân Viên:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Mô tả" maxlength="256" value="@Html.DisplayTextFor(model=>model.StaffName)" name="staff" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP TÊN NV</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>Ca LV:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Mô tả" maxlength="256" value="@Html.DisplayTextFor(model=>model.CaLV)" name="ca" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP Ca LV</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>Vị Trí:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Mô tả" maxlength="256" value="@Html.DisplayTextFor(model=>model.Location)" name="location" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP VỊ TRÍ</span>
            </div>
        </div>
      
           
        



    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
        <button type="reset" class="btn btn-success"><i class="fa fa-refresh"></i> Làm mới</button>
    </div>
    <!-- /.box-footer -->
</form>
<script>
    $('.date-picker').datepicker({
        rtl: App.isRTL(),
        orientation: "left",
        autoclose: true
    });
    var message = {};
    var rule = {};
    egovutil.submit("#frmAction", rule, message, "/PhanCa/action");
