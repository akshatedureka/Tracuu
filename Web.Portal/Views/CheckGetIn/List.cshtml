@{
    Layout = null;
    int rowIndex = 0;

}
<table id="tbl-hawb" class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th style="width:3%;background-color:chartreuse !important">
                STT
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                AWB
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                SỐ ĐỊNH DANH
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                SỐ KIỆN THEO SDD
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                SỐ KIỆN THEO AWB
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                SỐ KIỆN RECEIVED
            </th>
            <th style="width:20%;text-align:center;background-color:chartreuse !important">
                ĐẠI LÝ
            </th>
            <th style="width:10%;text-align:center;background-color:chartreuse !important">
                TÊN HÀNG
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Model.Models.CheckGetIn>)ViewData["listGetIn"])
        {
            rowIndex += 1;

            <tr>
                <td>@rowIndex</td>
                

                <td style="text-align:center">@Html.Raw(row.Awb_Prefix + "-" + row.Awb_Serial)</td>
                <td style="text-align:center">
                    @Html.Raw(row.GoodId)
                </td>
                <td style="text-align:center">
                    @Html.DisplayTextFor(model => row.Pieces_Per_GoodId)
                </td>
                <td style="text-align:center">
                    @Html.DisplayTextFor(model => row.Awb_Pieces_Received)
                </td>
                <td style="text-align:center">
                    @Html.DisplayTextFor(model => row.Group_Pices_Received)
                </td>
                <td style="text-align:center">
                    @Html.DisplayTextFor(model => row.Agent)
                </td>
                <td style="text-align:center">
                    @Html.DisplayTextFor(model => row.Good_Content)
                </td>

            </tr>
        }
    </tbody>
</table>





<script>
    egovutil.CreateTableSort("#tbl-hawb", [[0, "asc"]], [

                { "orderable": false, "targets": 4 }
    ], true);
</script>
