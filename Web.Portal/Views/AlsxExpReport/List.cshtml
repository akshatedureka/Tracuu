@{
    Layout = null;
    int rowIndex = 0;
}

<div class='col-md-12 col-xs-12 margin-top-10'>
    <label class='control-label'><b>TỔNG SỐ: @ViewBag.Total</b></label>
</div>

<table id="tbl-hawb" class="table table-striped table-bordered table-advance table-hover dt-responsive">
    <thead>
        <tr>
            <th style="width:3%">
                STT
            </th>
            <th style="width:3%">
                KHO KÉO DÀI
            </th>

            <th style="width:10%">
                MAWB
            </th>
            <th style="width:10%">
                KIỆN
            </th>
            <th style="width:10%">
                CÂN
            </th>
            <th style="width:10%">
                NGÀY TẠO
            </th>
            <th style="width:10%">
                BOOKING
            </th>
            <th style="width:10%">
                NHÂN VIÊN
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Model.Models.EXP_AWB>)ViewData["listAwb"])
        {
            rowIndex += 1;

            <tr>
                <td>@rowIndex</td>
                <td>
                    <a href="#" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.WAREHOUSE)</a>
                </td>
                <td>
                    <a href="#" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.AWBNO)</a>
                </td>
                <td>
                    <a href="#" _blank" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.BOOKED_PIECES)</a>
                </td>
                <td>
                    <a href="#" _blank" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.WEIGHT)</a>
                </td>
                <td>
                    <a href="#" _blank" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.CREATED_AT.Value.ToString("dd/MM/yyyy HH:mm"))</a>
                </td>
                <td>
                    <a href="#" _blank" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.UPDATED_BOOKING.HasValue? row.UPDATED_BOOKING.Value.ToString("dd/MM/yyyy HH:mm") : "")</a>
                </td>
                <td>
                    <a href="#" _blank" class="btn  btn-xs sqs-member-edit">@Html.Raw(row.USER_ACTION)</a>
                </td>
            </tr>
        }



    </tbody>
</table>
