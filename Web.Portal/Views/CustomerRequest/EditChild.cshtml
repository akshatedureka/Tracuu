@{
    Layout = null;
}

@model Web.Portal.Layer.CUSTOMER_DETAILS
<form class="form-horizontal" id="frmAction">

    <input type="hidden" name="keyValue" value="@Html.DisplayFor(model=>model.ID)" />
    <input type="hidden" name="code" value="@Html.DisplayFor(model=>model.CODE)" />
    <input type="hidden" name="year" value="@Html.DisplayFor(model=>model.YEAR)" />
    <div class="form-body">
      
        <div class="form-group form-md-line-input">
            <label class="col-md-2 control-label" for="frmAction">
                <b>TÊN ỦY QUYỀN:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-10">
                <input class="form-control" placeholder="Tên Ủy QUyền" style="text-transform:uppercase" value="@Html.DisplayTextFor(model=>model.INFOR)" name="INFOR" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập tên ủy quyền</span>
            </div>


        </div>        
        <div class="form-group form-md-line-input">

            <label class="col-md-3 control-label" for="frmAction">
                <b>NỘI DUNG ỦY QUYỀN:</b>

            </label>
            <div class="col-md-5">
                <input class="form-control" placeholder="REMARK" style="text-transform:uppercase" maxlength="50" value="@Html.DisplayTextFor(model=>model.REMARK)" name="REMARK" id="REMARK" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập remark</span>
            </div>

            <label class="col-md-1 control-label" for="frmAction">
                <b>IDNO:</b>

            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline " placeholder="IDNO" value="@Html.DisplayTextFor(model=>model.IDNO)" name="IDNO" id="IDNO" />
                <div class="form-control-focus"> </div>
                <span class="help-block">Nhập IDNO</span>
            </div>

        </div>



    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
        <button type="reset" class="btn btn-success"><i class="fa fa-refresh"></i> Làm mới</button>
    </div>



    <!-- /.box-footer -->
</form>
<script>
    $(".form_datetime").datetimepicker({
        autoclose: true,
        isRTL: App.isRTL(),
        format: "dd/mm/yyyy  hh:ii:ss",
        pickerPosition: (App.isRTL() ? "bottom-right" : "bottom-left")
    });
    var message = {
        
        INFOR: {
            required: "Tên ủy quyền không được trống"
        }

    };
    var rule = {
       
        INFOR: { required: true }

    };
    $('.bs-select').selectpicker({
        iconBase: 'fa',
        tickIcon: 'fa-check'
    });
    egovutil.submit("#frmAction", rule, message, "/customerrequest/actionchild");



</script>

