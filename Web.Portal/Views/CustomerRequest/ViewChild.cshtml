@{
    Layout = null;
    int PageCurrent = 0;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label uppercase'><b>Tổng số:</b> <b style="color:red"> @ViewBag.TotalRecord</b></label>
</div>


<table class="table table-striped table-bordered table-advance table-hover dt-responsive">
    <thead>
        <tr>
            <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
           
        
            <th style="width:70%;background-color:yellow !important;text-align:center">TÊN ỦY QUYỀN</th>
          
            <th style="width:10%;background-color:yellow !important;text-align:center">REMARK</th>
            <th style="width:15%;background-color:yellow !important;text-align:center">IDNO</th>
        </tr>


    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.CUSTOMER_DETAILS>)ViewData["CUSTOMERDETAILSLIST"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>        
                <td><a href="#" data-id="@Html.Raw(row.CODE)" class="edit-record">@Html.DisplayTextFor(model => row.INFOR)</a></td>
                <td><a href="#" data-id="@Html.Raw(row.CODE)" class="edit-record">@Html.DisplayTextFor(model => row.REMARK)</a></td>
                <td><a href="#" data-id="@Html.Raw(row.CODE)" class="edit-record">@Html.DisplayTextFor(model => row.IDNO)</a></td>
            </tr>
        }
    </tbody>

</table>