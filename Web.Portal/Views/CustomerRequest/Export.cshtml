@{
    Layout = null; int PageCurrent = 0;
}
<p style="text-align: center; font-size: 20pt; font-family: 'Times New Roman'">DANH SÁCH ỦY QUYỀN NĂM @ViewBag.Year</p>
<p style="text-align: left; font-size: 15pt; font-family: 'Times New Roman'"><b>Tổng số: @ViewBag.TotalRecord</b></p>
<table border="1" style="width:100%;font-family:'Times New Roman';font-size:14pt;">
    <thead>
        <tr>
            <th class="all" style="width:3%;background-color:yellow !important;text-align:center"></th>
            
            <th style="width:10%;background-color:yellow !important;text-align:center">CODE</th>
            <th style="width:35%;background-color:yellow !important;text-align:center">INFOR</th>
            <th style="width:25%;background-color:yellow !important;text-align:center">PEOPLE</th>
            <th style="width:10%;background-color:yellow !important;text-align:center">REMARK</th>
            <th style="width:15%;background-color:yellow !important;text-align:center">IDNO</th>
        </tr>


    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.IMP_CUSTOMER_REQUEST>)ViewData["ImpCustomerRequestList"])
        {
            PageCurrent += 1;

            <tr>
                <td>@PageCurrent</td>
               
                <td>@Html.DisplayTextFor(model => row.CODE)</td>
                <td>@Html.DisplayTextFor(model => row.INFOR)</td>
                <td>@Html.DisplayTextFor(model => row.PEOPLE)</td>
                <td>@Html.DisplayTextFor(model => row.REMARK)</td>
                <td>@Html.DisplayTextFor(model => row.IDNO)</td>
            </tr>
        }
    </tbody>

</table>