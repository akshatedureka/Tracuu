
@{
    Layout = null;
}
@model Web.Portal.Model.Models.FLightFlup
<form class="form-horizontal" id="frmAction">
    <input type="hidden" name="keyValue" value="@Html.DisplayFor(model=>model.ID)" />
    <div class="form-body">
        <div class="form-group form-md-line-input">
            <label class="col-md-3 control-label" for="frmAction">
                <b>CHUYẾN BAY:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline input txtName" placeholder="Chuyến bay" maxlength="256" data-id="@Html.DisplayTextFor(model=>model.FlightID)" value="@Html.DisplayTextFor(model=>model.FLightNumber)" name="flight" />
                <div class="form-control-focus"> </div>
                <span class="help-block">NHẬP CHUYẾN BAY</span>
            </div>
            <label class="col-md-3 control-label" for="frmAction">
                <b>LAT:</b>
                <span class="required">*</span>
            </label>
            <div class="col-md-3">
                <input class="form-control form-control-inline form_datetime" value="@Html.Raw(Model.LAT.HasValue? Model.LAT.Value.ToString("dd/MM/yyyy HH:mm"):"")" id="std" placeholder="LAT" maxlength="20" name="lat" />
                <div class="form-control-focus"> </div>
                <span class="help-block">LAT</span>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
        <button type="reset" class="btn btn-success"><i class="fa fa-refresh"></i> Làm mới</button>
    </div>
    <!-- /.box-footer -->
</form>
<script>
    $(".form_datetime").datetimepicker({
        autoclose: true,
        isRTL: App.isRTL(),
        format: "dd/mm/yyyy  hh:ii",
        pickerPosition: (App.isRTL() ? "bottom-right" : "bottom-left")
    });

    $('.bs-select').selectpicker({
        iconBase: 'fa',
        tickIcon: 'fa-check'
    });
    var message = {};
    var rule = {};
    egovutil.submit("#frmAction", rule, message, "/Flup/action");

</script>
