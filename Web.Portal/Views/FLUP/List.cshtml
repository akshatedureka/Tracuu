@{
    Layout = null;
    int PageCurrent = 0;

}
<div class='col-md-2 col-xs-12 margin-top-10'>
    <label class='control-label'><b>CẤU HÌNH CHUYẾN BAY</b></label>
</div>
<table class="table table-striped table-bordered table-advance table-hover dt-responsive" id="tbl-invoice">
    <thead>
        <tr>
            <th class="all" style="width:3%"></th>
            <th style="width:10%">
                CHUYẾN BAY
            </th>

            <th style="width:15%">
                ETD
            </th>
            <th style="width:15%">
                LAT
            </th>
            <th style="width:10%">
                ACTION
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Model.Models.FLightFlup>)ViewData["FlightList"])
            {
                PageCurrent += 1;

        <tr>
            <td>@PageCurrent</td>
            <td><a href="#" data-id="@Html.Raw(row.FlightID)" class="edit-flight  ">@Html.DisplayTextFor(model => row.FLightNumber)</a></td>

            <td><a href="#" data-id="@Html.Raw(row.FlightID)" class="edit-flight  ">@Html.Raw(row.ETD.ToString("dd/MM/yyyy HH:mm"))</a></td>

            <td><a href="#" data-id="@Html.Raw(row.FlightID)" class="edit-flight  ">@Html.Raw(row.LAT.HasValue? row.LAT.Value.ToString("dd/MM/yyyy HH:mm"):"")</a></td>

            <td><a href="#" data-id="@Html.DisplayFor(model => row.ID)" class="btn  btn-xs flight-edit"><div class="btn-group green"><i style="font-size:30px;" class="fa fa-edit"></i></div> </a></td>
        </tr>
        }
    </tbody>

</table>
<script>


    $(".flight-edit").click(function () {
        egovutil.dialog("SỬA THÔNG TIN FLIGHT", "large", "/Flup/edit/" + $(this).attr("data-id"), "flightAction.search();");
    });
    $(".flightConfig-edit").click(function () {
        egovutil.dialog("SỬA THÔNG TIN CẤU HÌNH", "large", "/FlupFlight/editConfig/" + $(this).attr("data-id"), "flightAction.search();");
    });

    //$(".edit-flight").click(function () {
    //    egovutil.dialog("CONT DETAIL", "large", "/FlupFlight/editflight/" + $(this).attr("data-id"), "");
    //});

    egovutil.CreateTableSort("#tbl-flight", [[0, "asc"]], [

   {

       "orderable": false, "targets": [0, 0]
   }
    ], false);
   
   
</script>
