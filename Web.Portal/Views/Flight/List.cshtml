@{
    Layout = null;
    int PageCurrent = 0;

}
<div class='col-md-2 col-xs-4 margin-top-10'>
    <label class='control-label'><b>Tổng số: @ViewBag.TotalRecord</b></label>
</div>

<table class="table table-striped table-bordered table-advance table-hover dt-responsive" id="tbl-flight">
    <thead>
        <tr style="">
            <th class="all"  style="width:3%;font-size:20px;background-color:yellow !important;text-align:center">
                N0
            </th>
            <th  style="width:15%;font-size:20px;background-color:yellow !important;text-align:center">
                AIRLINE
            </th>
            <th  style="width:10%;font-size:20px;background-color:yellow !important;text-align:center">
                FLIGHT NO
            </th>
            <th style="width:20%;font-size:20px;background-color:yellow !important;text-align:center">
                SCHEDULE DATE
            </th>
            <th style="width:20%;font-size:20px;background-color:yellow !important;text-align:center">
                SCHEDULE TIME
            </th>
            <th style="width:20%;font-size:20px;background-color:yellow !important;text-align:center">
                LANDED DATE
            </th>
            <th style="width:15%;font-size:20px;background-color:yellow !important;text-align:center">
                LANDED TIME
            </th>




        </tr>
    </thead>
    <tbody>
        @foreach (var row in (IList<Web.Portal.Layer.Flight>)ViewData["flightLists"])
        {
            PageCurrent += 1;

            <tr class="@Html.Raw(row.LandDate.HasValue && row.LandDate.Value != DateTime.MinValue?"bg-red":"bg-blue")" >
                <td style="font-size:18px;color:white;font-weight:bold" >@PageCurrent</td>

                <td style="font-size:18px;color:white;font-weight:bold">@Html.DisplayTextFor(model => row.Code)</td>
                <td style="font-size:18px;color:white;font-weight:bold">@Html.DisplayTextFor(model => row.FlightNo)</td>
                <td style="font-size:18px;color:white;font-weight:bold">@Html.Raw(row.ScheDate.HasValue && row.ScheDate.Value != DateTime.MinValue ? row.ScheDate.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
                <td style="font-size:18px;color:white;font-weight:bold">@Html.DisplayTextFor(model => row.ScheTime)</td>
                <td style="font-size:18px;color:white;font-weight:bold">@Html.Raw(row.LandDate.HasValue && row.LandDate.Value != DateTime.MinValue ? row.LandDate.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
                <td style="font-size:18px;color:white;font-weight:bold">@Html.DisplayTextFor(model => row.LandTime)</td>

            </tr>
        }
    </tbody>

</table>


   @if(!string.IsNullOrEmpty(@ViewBag.Translate))
   {
        <iframe src="https://support.lsdsoftware.com/read-aloud/speak/vi/Whisper?q=@ViewBag.Translate" allow="autoplay" id="audio" style="display:none"></iframe>
   }

